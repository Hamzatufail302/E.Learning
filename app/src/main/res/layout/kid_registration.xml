<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kid_registration"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/kregback"

    >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="55dp"
        android:src="@drawable/vatar"
        android:id="@+id/kid_iamge"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="0dp"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <EditText

        android:id="@+id/kid_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:hint="Name" />

    <EditText

        android:id="@+id/kid_age"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="Age" />
    <EditText

        android:id="@+id/kid_email"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        />
    <EditText

        android:id="@+id/kid_pass"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:layout_marginTop="30dp"
        />
    <Button

        android:id="@+id/Register_kid"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:background="@drawable/btn"

        />
    <TextView
        android:id="@+id/Login"
        android:layout_marginBottom="80dp"

        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="Allready register?Login now"
        android:textColor="@color/blue"
        />



</LinearLayout>